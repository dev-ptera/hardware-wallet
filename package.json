{
    "name": "thebananostand",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve --open --host 0.0.0.0",
        "serve": "ng serve --host 0.0.0.0",
        "build": "ng build && yarn minify-assets",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "test:ci": "ng test --watch false --browsers=ChromeHeadless",
        "cypress": "cypress open",
        "cypress:run": "cypress run",
        "cytest": "start-server-and-test start http://localhost:4200 cypress:run",
        "npm-check-updates": "npm-check-updates --target patch -u",
        "lint": "eslint \"src/**/**.ts\"",
        "lint:fix": "eslint \"src/**/**.ts\" --fix",
        "preflight": "yarn upgrade && yarn npm-check-updates && yarn ng update && yarn && yarn audit fix && yarn lint:fix && yarn prettier && yarn outdated",
        "prettier": "prettier \"src/app/**/**.{ts,js,json,css,scss,html}\" --write",
        "prettier:check": "prettier \"src/app/**/**.{ts,js,json,css,scss,html}\" --check",
        "minify-assets": "minify-all-js dist/thebananostand/assets/"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^15.0.4",
        "@angular/cdk": "^15.0.3",
        "@angular/common": "^15.0.4",
        "@angular/compiler": "^15.0.4",
        "@angular/core": "^15.0.4",
        "@angular/forms": "^15.0.4",
        "@angular/material": "^15.0.3",
        "@angular/platform-browser": "^15.0.4",
        "@angular/platform-browser-dynamic": "^15.0.4",
        "@angular/router": "^15.0.4",
        "@bananocoin/bananojs-hw": "^1.2.14",
        "@brightlayer-ui/angular-components": "8.0.0",
        "@brightlayer-ui/angular-themes": "^8.0.0",
        "@brightlayer-ui/colors": "^3.0.1",
        "@dev-ptera/nano-node-rpc": "^2.1.0",
        "@ngneat/until-destroy": "^9.2.2",
        "copy-to-clipboard": "^3.3.3",
        "qrcode": "^1.5.1",
        "rxjs": "~6.6.7",
        "tslib": "^2.1.0",
        "zone.js": "^0.11.8"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^15.0.4",
        "@angular/cli": "^15.0.4",
        "@angular/compiler-cli": "^15.0.4",
        "@brightlayer-ui/eslint-config": "^3.0.1",
        "@brightlayer-ui/prettier-config": "^1.0.3",
        "@types/jasmine": "~3.6.11",
        "@types/node": "^12.20.55",
        "@typescript-eslint/eslint-plugin": "^5.14.0",
        "@typescript-eslint/parser": "^5.14.0",
        "cypress": "^12.0.2",
        "eslint": "^8.10.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-cypress": "^2.12.1",
        "jasmine-core": "~3.7.1",
        "karma": "~6.3.20",
        "karma-chrome-launcher": "^3.1.1",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.2",
        "karma-jasmine-html-reporter": "~1.5.4",
        "minify-all-js": "^0.1.9",
        "npm-check-updates": "^12.5.12",
        "prettier": "^2.4.1",
        "start-server-and-test": "^1.14.0",
        "typescript": "~4.8.4"
    },
    "prettier": "@brightlayer-ui/prettier-config"
}
